<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main" remove="true"/>
        <referenceContainer name="columns" remove="true"/>

        <referenceContainer name="main.content">
            <block class="Practice\Blog\Block\BlogContent" name="blog_show_index" template="Practice_Blog::show_blog.phtml">
                <!-- <arguments>
                    <argument name="cache_tags" xsi:type="string">show_blog_content_cache</argument>
                </arguments> -->
            </block>
            <block class="Practice\Blog\Block\FeaturedPost" name="list_featured_blog" template="Practice_Blog::featured_blog.phtml" after="blog_show_index"></block>

            <block class="Practice\Blog\Block\BlogComment" name="blog_show_index_comment" template="Practice_Blog::blog_comment.phtml" after="list_featured_blog"></block>
        </referenceContainer>
    </body>
</page>
