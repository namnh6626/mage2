<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/
Layout/etc/page_configuration.xsd">
    <head>
        <css src="Practice_Blog::css/style_blog.css"/>
    </head>
    <body>
        <referenceContainer name="div.sidebar.additional" remove="true"/>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="blog">
                <arguments>
                    <argument name="label" translate="true" xsi:type="string">Blog</argument>
                    <argument name="path" xsi:type="string">blog/all/index</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
